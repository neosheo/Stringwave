<ezstream>
	<servers>
		<server>
			<name>Icecast</name>
			<protocol>HTTP</protocol>
			<hostname>icecast</hostname>
			<port>8000</port>
			<user>source</user>
			<password></password>
			<tls>None</tls>
			<reconnect_attempts>20</reconnect_attempts>
		</server>
	</servers>
	
	<intakes>
		<intake>
			<name>main</name>
			<type>playlist</type>
			<filename>.playlist</filename>
			<shuffle>Yes</shuffle>
			<stream_once>0</stream_once>
		</intake>
	</intakes>

	<streams>
		<stream>
			<mountpoint>/main</mountpoint>
			<intake>main</intake>
			<server>Icecast</server>
			<public>No</public>
			<format>ogg</format>
		</stream>
	</streams>

	<metadata>
		<format_str>@a@ - @t@</format_str>
		<refresh_interval>10</refresh_interval>
		<normalize_strings>Yes</normalize_strings>
		<no_updates>No</no_updates>
	</metadata>
</ezstream>
